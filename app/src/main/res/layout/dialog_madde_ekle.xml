<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="vertical"
        android:id="@+id/layoutln1"
        android:padding="10dp">

        <EditText
            android:id="@+id/numara_madde"
            android:layout_width="match_parent"
            android:layout_marginTop="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Madde numarasi giriniz"
            android:textColor="#000"
            android:inputType="number" />

        <EditText
            android:id="@+id/input_madde"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Madde ismi giriniz"
            android:textColor="#000"
            android:inputType="textPersonName"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/action_madde_iptal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="IPTAL"
                android:textColor="#33bbff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/action_madde_ekle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="0.1"
                android:layout_alignParentBottom="true"
                android:text="EKLE"
                android:textColor="#33bbff"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>